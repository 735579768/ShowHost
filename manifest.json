{
  "name": "网站地址探测",
  "version": "1.0",
  "manifest_version": 2,
  "description": "网站地址探测",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": { "scripts": ["bg.js"] },
  "permissions": [
   "tabs", "http://*/*"
  ],
  "browser_action": {
    "default_icon": "icon.ico",
	"default_title":"网址查询",
    "default_popup": "popup.html"
 },
"content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["hostbar.js"],
	  "run_at":"document_end",
	  "css":["hostbar.css"]
    }
  ]
}